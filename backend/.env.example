# Airport Flight Tracker - Backend Environment Variables
# Copy this to .env and fill in your values

# Database URL
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./airport_tracker.db

# For production (PostgreSQL - Railway provides this automatically):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Security - CHANGE THIS IN PRODUCTION!
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# Debug mode (set to false in production)
DEBUG=true

# Frontend URL for CORS (Railway will set this)
FRONTEND_URL=http://localhost:5173
